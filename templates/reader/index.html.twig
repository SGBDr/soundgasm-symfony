{% extends 'search/index.html.twig' %}

{% block title %}Reader {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;600;700&display=swap" rel="stylesheet">
{% endblock %}

{% block nav %}
    {{parent()}}
{% endblock %}



{% block content_m %}
    <div class="result">
        {% if music != null %}
            <div class="content-r">
                <div>
                    <div class="top-result">
                        <h2>Reader</h2>
                        <img src={{music.getRepImage()}} alt="">
                        <div class="down-line">
                            <div class="dd">
                                <h2>{{music.getName()}}</h2>
                                <audio src={{music.getTrack()}} controls/>
                            </div>
                            {% if isLike %}
                                <a href={{ path('app_reader', {id : music.getId(), action : "unlike"}) }}>
                                    <div class="lect1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                        </svg>
                                    </div>
                                </a>
                            {% else %}
                                <a href={{ path('app_reader', {id : music.getId(), action : "like"}) }}>
                                    <div class="lect1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                                        </svg>
                                    </div>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="list">
                    {% for song in musics %}
                        <a href=""></a>
                        <div class="song-item-list">
                            <div class="b1">
                                <img src={{song.getRepImage()}} alt="">
                                <div>
                                    <h4>{{song.getName()}}</h4>
                                    <h6><a href={{ path('app_artist', {id : song.getArtist().getId()}) }}>{{song.getArtist().getName() | upper}}</a></h6>
                                </div>
                                <a href={{ path('app_reader', {id : song.getId()}) }}>
                                    <div class="lect1">
                                        <svg viewBox="0 0 48 48" width="15" height="15" version="1" xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 48 48" fill="#000000">
                                            <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                                            <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                                            <g id="SVGRepo_iconCarrier"> 
                                                <path fill="#F44336" d="M38,42H10c-2.2,0-4-1.8-4-4V10c0-2.2,1.8-4,4-4h28c2.2,0,4,1.8,4,4v28C42,40.2,40.2,42,38,42z"></path> 
                                                <polygon fill="#ffffff" points="31,24 20,16 20,32"></polygon> 
                                            </g>
                                        </svg>
                                    </div>
                                </a>
                            </div>
                            <div class="ss">
                                <small>{{song.getStyle() | upper}}</small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div>
                No result founded !
            </div>
        {% endif %}
    </div>
{% endblock %}

