{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href={{asset("asset/css/loginStyle.css")}} type="text/css">
{% endblock %}

{% block body %}
    <img src="asset/images/hero-bg.png"/>
    <div class="container">
        <form method="post" class="form">


            <h1 class="text-center">Soundgasm</h1>
            <div class="form-control">
                <div class="label-2"><label for="inputEmail">Email</label></div>
                <input type="email" value="{{ last_username }}" placeholder="john@mail.com" name="email" id="inputEmail" autocomplete="email" required autofocus>
            </div>
            {% if error %}
                <div class="alert">{{ "no account founded!" }}</div>
            {% endif %}
            {% if app.user %}
                <div class="alert1">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <div class="form-control">
                <div class="label-1"><label for="inputPassword">Password</label></div>
                <input type="password" name="password" placeholder="* * *  * * * * * *" id="inputPassword" autocomplete="current-password" required>
                <br>
                <small><a href="{{ path('app_register') }}">Password forgot</a></small>
            </div>

            <div class="form-control">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit">
                    Sign in
                </button>
                <br>
                <small>You are not a member yet ? <a href="{{ path('app_register') }}">register here!</a></small>
            </div>

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
        </form>
    </div>

{% endblock %}
